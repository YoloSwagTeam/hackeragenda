  <!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
  %head
    %meta{"charset": "utf-8"}

    <!-- Set the viewport width to device width for mobile -->
    %meta{"name": "viewport", "content": "width: device-width"}

    %title
      -block title
        ❤ Belgium Hacker Agenda ❤

    <!-- IE Fix for HTML5 Tags -->
    <!--[if lt IE 9]>
      %script{"src": "http://html5shiv.googlecode.com/svn/trunk/html5.js"}
    <![endif]-->

    <!-- Included CSS Files (Uncompressed) -->
    <!-- %link{"rel": "stylesheet", "href": "{{ STATIC_URL }}stylesheets/foundation.css"} -->

    <!-- Included CSS Files (Compressed) -->
    %link{"rel": "stylesheet", "href": "{% static 'foundation-sites/dist/foundation.min.css' %}"}
    %link{"rel": "stylesheet", "href": "{{ STATIC_URL }}stylesheets/leaflet.awesome-markers.css"}
    %link{"rel": "stylesheet", "href": "{{ STATIC_URL }}stylesheets/MarkerCluster.css"}
    %link{"rel": "stylesheet", "href": "{{ STATIC_URL }}stylesheets/MarkerCluster.Default.css"}
    %link{"rel": "stylesheet", "href": "{% static 'snapjs/snap.css' %}"}
    %link{"rel": "stylesheet", "href": "{{ STATIC_URL }}stylesheets/app.css"}
    -leaflet_css

    :css
      .love:before {
        content: "❤";
        color: pink;
      }
      .love:after {
        content: "❤";
        color: pink;
      }

    -block head
      %link{rel: "stylesheet", type: "text/css", href: "{% static 'fullcalendar/fullcalendar.css' %}"}
      :css
        .fc-state-highlight {
          background: none repeat scroll 0 0 #FCEB8F;
        }

    <!-- IE Fix for HTML5 Tags -->
    <!--[if lt IE 9]>
      <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

  %body

    -block filter_bar

    <!-- container -->
    #content.container.snap-content{style: 'background: url("{{ STATIC_URL }}images/white.png") no-repeat scroll center 75% #FFFFFF;'}

      -block container
        .expanded.row
          .small-2.columns
            -block sidebar
          .small-10.columns
            -block content

    %script{"src": "{% static 'jquery/dist/jquery.min.js' %}"}
    %script{"src": "{% static 'foundation-sites/dist/foundation.min.js' %}"}
    %script{"src": "{% static 'foundation-sites/js/foundation.core.js' %}"}
    %script{"src": "{% static 'foundation-sites/js/foundation.tabs.js' %}"}
    %script{"src": "{% static 'foundation-sites/js/foundation.util.keyboard.js' %}"}
    %script{"src": "{% static 'foundation-sites/js/foundation.util.timerAndImageLoader.js' %}"}
    %script{"src": "{% static 'foundation-sites/js/foundation.equalizer.js' %}"}

    -leaflet_js
    %script{"src": "{{ STATIC_URL }}javascripts/leaflet.awesome-markers.min.js"}
    %script{"src": "{{ STATIC_URL }}javascripts/leaflet.markercluster.js"}

    -block javascript
