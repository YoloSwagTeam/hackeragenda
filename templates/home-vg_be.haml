            %ul
              %li
                %b
                  %a{href: "{{ details.url }}"}
                    =details.url
          {% cycle '' '' '</div>' %}

  %center
    %a{href: "http://thecatapi.com/"}
      %img{src: "http://thecatapi.com/api/images/get?format=src&size=small"}

  %hr

