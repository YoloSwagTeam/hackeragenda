      #calendar

    %li#listTab
      #listFormat

    %li#sourcesTab
      .row
        -for name, details in sources
          {% cycle '<div class="row">' '' '' %}
          .four.columns
            %center
              %h3{style: 'background-color: {{ details.bg|default:"black" }}; color: {{ details.fg|default:"white" }}; padding: 3px; padding-left: 6px; padding-right: 6px;'}= name|underscore_to_space|title
